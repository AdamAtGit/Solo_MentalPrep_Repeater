<UserControl
    x:Class="MentalPrepApp.Views.UserControls.AppFxs.Nested.DictationUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MentalPrepApp.Views.UserControls.AppFxs.Nested"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="360">

    <Grid Height="100" Width="360">
        <StackPanel Background="DarkGray" Orientation="Horizontal">
            <ToggleSwitch x:Name="TgsCmdModeOn" Header="Command Mode On"
                          FontSize="12" Margin="5 6 0 5" VerticalAlignment="Top"/>
            <AppBarButton x:Name="BtnDictate"  Background="Gray"
                          Label="Dictate" Icon="Microphone" Foreground="WhiteSmoke"
                          VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</UserControl>
